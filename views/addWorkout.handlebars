<main id="add-workout">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="card">
          {{!-- Form header --}}
          <header class="card-header">
            <p class="card-header-title">
              Add New Workout
            </p>
          </header>

        {{!-- Add Workout Form --}}
          <div class="card-content" id="form-top">
            <div class="content">

              {{!-- Category Input --}}
              <div class="field">
                <label class="label">Workout Category *</label>
                <div class="control">
                  <div class="select">
                    <select id="category">
                      <option>Cardio</option>
                      <option>Strength</option>
                      <option>Flexibility</option>
                      <option>Balance</option>
                    </select>
                  </div>
                </div>
              </div>

              {{!-- Distance Input --}}
              <div class="field">
                <label class="label">Distance *</label>
                <div class="control">
                  <input class="input" type="text" placeholder="If distance is not a factor, type 0." id="distance">
                </div>
              </div>

              {{!-- Duration Input --}}
              <div class="field">
                <label class="label">Duration *</label>
                <div class="control">
                  <input class="input" type="text" placeholder="How long did you do this exercise for?" id="duration">
                </div>
              </div>

              {{!-- Date Input --}}
              <div class="field">
                <label for="date-input" class="label">Date *</label>
                <div class="control">
                  <input class="form-control" type="date" value="" id="date-input">
                </div>
              </div>

              {{!-- Details Input --}}
              <div class="field">
                <label class="label">Workout Details</label>
                <div class="control">
                  <textarea class="textarea" placeholder="Enter any other details about this workout. (i.e. reps, weight, etc.)" id="details"></textarea>
                </div>
              </div>

              <p class="optional"><i><sub>* Required field</sub></i></p>
            </div>
          </div>

          {{!-- Add Workout Button --}}
          <footer class="card-footer" id="add-a-workout">
            <a href="#" type="submit" class="card-footer-item">Add Workout</a>
          </footer>
        </div>
      </div>
    </div>
  </div>
</main>

{{!-- Modal: Add another workout or view workouts --}}
<div id="workout-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title w-100">You successfully added a workout session!</h5>
      </div>
      <div class="modal-body">
        <p>What would you like to do next?</p>
        <form>
          <a class="btn close_modal pt-1 bye-btn" href="/views/addWorkout.handlebars" role="button">Add Another Workout</a>
          &nbsp;
          <a class="btn close_modal pt-1 bye-btn" href="/views/exercises.handlebars" role="button">View Workouts</a>
        </form>
      </div>
    </div>
  </div>
</div>